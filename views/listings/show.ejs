<script type="module" src='https://cdnjs.cloudflare.com/ajax/libs/axios/1.6.8/axios.min.js'></script>
<script src="https://js.stripe.com/v3/"></script>
<script src="/js/map.js"></script>
<script src="/js/booking.js"></script>