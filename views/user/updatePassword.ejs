<% layout('layout/boiler') -%>

<div class="row justify-content-center mt-3 mb-3 ">
<div class="p-3 m-3 signup_card">
    <h5 class=" mt-3  text-center bold-text">Set Password </h5>
    <hr class=" text-center ">
    <div class="row justify-content-center">
        <div class="col-10 " >

            <form action="/listings/resetPassword/<%=token%>"  method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="password" class="form-label font-w-600"> Enter New Password</label>
                    <input type="password"
                       name="password"  
                       class="form-control"
                       id="password"
                      required
                    >
                    <div class="invalid-feedback">Password can't be empty !</div>
                </div>
                <div class="mb-3">
                    <label for="passwordConfirm" class="form-label font-w-600"> Confirm your Password</label>
                    <input type="password"
                      name="passwordConfirm"  
                      class="form-control"
                      id="passwordConfirm"
                       required
                    >
                    <div class="invalid-feedback">Password Confirm can't be empty !</div>
                </div>
                
                <button class="btn btn-danger mt-3 mb-3 loginbtn btn_full">Set Password</button>
            </form>
            
        </div>
    </div> 
</div>