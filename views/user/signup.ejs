<% layout('layout/boiler') -%>

<div class="row justify-content-center mt-3 mb-3 ">
<div class="p-3 m-3 signup_card ">
    <h5 class=" mt-3  text-center bold-text">SignUp </h5>
    <hr class=" text-center ">
    <h2 class=" bold-text text-center">Welcome to Wanderlust</h2>
    <div class="row justify-content-center">
        <div class="col-10 " >

            <form action="/listings/signup"  method="POST" class="needs-validation"  enctype="multipart/form-data" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label font-w-600">Username</label>
                    <input type="text"
                     name="name"  
                    class="form-control"
                    id="username"
                    required>
                    <div class="valid-feedback">Looking Good !</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label font-w-600"> Email Address</label>
                    <input type="email"
                       name="email"  
                       class="form-control"
                       id="email"
                      required
                    >
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label font-w-600">Create a Password</label>
                    <input type="password"
                      name="password"  
                      class="form-control"
                      id="password"
                       required
                    >
                </div>
                <div class="mb-3">
                    <label for="passwordConfirm" class="form-label font-w-600">Confirm Password</label>
                    <input type="password"
                      name="passwordConfirm"  
                      class="form-control"
                      id="passwordConfirm"
                       required
                    >
                </div>
                
                <div class="mb-3">
                    <label for="photo" class="form-label font-w-600">Upload a Photo</label>
                    <input type="file"
                      name="photo"  
                      class="form-control"
                      id="photo"
                    >
                </div>
                <button class="btn btn-danger mt-3 mb-3 loginbtn btn_full">Create  account</button>
            </form>
        </div>
    </div>
</div>
</div>