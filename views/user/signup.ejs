<% layout('layout/boiler') -%>

<h2 class="col-8 offset-3 mt-3">SignUp For Wanderlust</h2>
<div class="row">
    <div class="col-8 offset-3" >

        <form action="/signup"  method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text"
                   name="username"  
                   class="form-control"
                   id="username"
                   required>
                <div class="valid-feedback">Looking Good !</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email"
                   name="email"  
                   class="form-control"
                   id="email"
                   required
                >
                
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password"
                   name="password"  
                   class="form-control"
                   id="password"
                   required
                >
                
            </div>
            <button class="btn btn-success">signup</button>
        </form>

    </div>
</div>